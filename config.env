#!/bin/bash
# ==============================================================================
#                 Central Configuration for Automation Scripts
# ==============================================================================
#
# Instructions:
# 1. Fill in the placeholder values below with your actual credentials and settings.
# 2. Since this repository is PRIVATE, it is safe to store these values here.
# 3. This file will be sourced by all scripts to load these variables into the
#    environment.
#
# Do NOT share this file or make the repository public.
#

# --- Oracle Cloud Infrastructure (OCI) ---
# OCI user OCID, tenancy OCID, region, and key fingerprint for API access
export OCI_USER_OCID="ocid1.user.oc1..xxxxxxxxxxxx"
export OCI_TENANCY_OCID="ocid1.tenancy.oc1..xxxxxxxxxxxx"
export OCI_REGION="us-ashburn-1"
export OCI_KEY_FINGERPRINT="xx:xx:xx:xx:xx:xx:xx:xx"
# Path to the private key file on the VPS where scripts are run
export OCI_PRIVATE_KEY_PATH="/home/ubuntu/.oci/oci_api_key.pem"
# Default compartment OCID for creating resources
export OCI_DEFAULT_COMPARTMENT_OCID="ocid1.compartment.oc1..xxxxxxxx"

# --- Docker ---
# Credentials for a private Docker registry
export DOCKER_REGISTRY_URL="your-registry.example.com"
export DOCKER_USERNAME="your-docker-username"
export DOCKER_REGISTRY_TOKEN="your-docker-password-or-token"

# --- Coolify ---
# Coolify API endpoint and API key for management
export COOLIFY_API_ENDPOINT="https://coolify.your-domain.com"
export COOLIFY_API_KEY="your-coolify-api-key"

# --- Network Automation ---
# Your domain for DNS records, and API key for your DNS provider (e.g., Cloudflare)
export DNS_PROVIDER_API_KEY="your-dns-provider-api-key"
export DNS_ZONE_ID="your-dns-zone-id"
export DOMAIN_NAME="your-domain.com"

# --- Security & Hardening ---
# Email for SSL certificate registration with Let's Encrypt
export LETSENCRYPT_EMAIL="your-email@your-domain.com"
# A list of public SSH keys (one per line, in quotes) to authorize on new servers
export AUTHORIZED_SSH_KEYS=(
  "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQ... user@host"
  "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABgQ... anotheruser@host"
)

# --- Backup & Recovery ---
# S3-compatible object storage credentials for storing backups
export BACKUP_S3_ENDPOINT="https://your-s3-endpoint.com"
export BACKUP_S3_ACCESS_KEY="your-s3-access-key"
export BACKUP_S3_SECRET_KEY="your-s3-secret-key"
export BACKUP_S3_BUCKET_NAME="your-backup-bucket-name"
# Encryption passphrase for backups
export BACKUP_ENCRYPTION_PASSPHRASE="a-very-strong-password"

# --- Monitoring & Alerting ---
# Webhook URL for sending notifications (e.g., to Slack or Discord)
export NOTIFICATION_WEBHOOK_URL="https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX"
